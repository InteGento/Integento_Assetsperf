<config>
    <tabs>
        <assetsperf translate="label" module="integento_assetsperf">
            <label>Integento</label>
            <sort_order>999999</sort_order>
        </assetsperf>
    </tabs>
    <sections>
        <integento_assetsperf translate="label" module="integento_assetsperf">
            <label>Assets Performance</label>
            <tab>assetsperf</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label" module="integento_assetsperf">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <expanded>true</expanded>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enablecompression_js translate="label comment" module="integento_assetsperf">
                            <label>Enable JS Compression</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablecompression_js>
                        <enablecompression_css translate="label comment" module="integento_assetsperf">
                            <label>Enable CSS Compression</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablecompression_css>
                    </fields>
                </settings>
            </groups>
        </integento_assetsperf>
    </sections>
</config>
